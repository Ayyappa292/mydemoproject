<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt"
	xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
		controllerName="mydemoproject.mycontrollers.mainview" xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="true">
	<tnt:ToolHeader active="true" >
				<Text text="Welcome {mymodel>/username}" id="userid"/>
				<ToolbarSpacer />
				<Toolbar >
				</Toolbar>
				<Button text="MyCart" icon="sap-icon://cart" 
					type="Transparent" press="oncart"/>
			</tnt:ToolHeader>
			<SplitApp id="splitapp" initialDetail="detail"
				initialMaster="master">
				<detailPages>
					<Page id="detail">
					<content>
					<FlexBox alignContent="Center" class="hello">
					<items>
					<core:Icon src="sap-icon://detail-view" size="200px"/>
					</items>
					</FlexBox>
					<Text text="Select on a Category to display products"  class="hello1"/>
					</content>
					</Page>
					<Page id="demo1" title="Products"
						backgroundDesign="Solid">
						<Table items="{mymodel>/adetails}" id="carttable">
							<columns>
								<Column>
									<Text text="Product Name" />
								</Column>
								<Column>
									<Text text="Prodcut Image" />
								</Column>
								<Column>
									<Text text="Price" />
								</Column>
								<Column>
								</Column>
							</columns>
							<items>
								<ColumnListItem >
									<cells>
										<Text text="{mymodel>productname}" />
										<HBox>
										<Image
					src="{mymodel>productimage}"
					decorative="false"
					width="170px"
					densityAware="false">
					<detailBox>
						<LightBox>
							<LightBoxItem
								imageSrc="{mymodel>productimage}"
								alt="Beamer"/>
						</LightBox>
					</detailBox>
					<layoutData>
						<FlexItemData growFactor="1" shrinkFactor="0" />
					</layoutData>
				</Image>
										</HBox>
										<Text text="{mymodel>price}" />
										<HBox>
										<Button icon="sap-icon://cart-3" press=".onaddtocart"/>
										</HBox>	
									</cells>
								</ColumnListItem>
							</items>
							
						</Table>
					</Page>
					<Page id="demo2" title="detail products">
					<Text text="Hi i am in table item detail page"/>
					</Page>
									</detailPages>
				<masterPages>
					<Page id="master" title="Categories" backgroundDesign="List">
						<SearchField width="100%" liveChange=".onSearch"/>
						<List items="{mymodel>/categories}" mode="SingleSelectMaster"
							selectionChange=".onselectChange" id="listid">
							<StandardListItem title="{mymodel>name}"
								type="Navigation" custom:to="demo1" id="id1" />
						</List>
					</Page>

				</masterPages>
			</SplitApp>

</core:View>