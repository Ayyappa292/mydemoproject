<core:View xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="mydemoproject.mycontrollers.tileview"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="e-Commerce">
		<content>
			<FlexBox height="400px" alignItems="Center"
				justifyContent="Center">
				<GenericTile header="Products Application"
					press=".onPress">
					<TileContent footer="Browse Products">
						<ImageContent src="sap-icon://retail-store" />
					</TileContent>
				</GenericTile>
				<GenericTile header="Administrative Department"
					press=".onAdmin">
					<TileContent footer="Restricted Access">
						<ImageContent src="sap-icon://retail-store-manager" />
					</TileContent>
				</GenericTile>
			</FlexBox>
		</content>
	</Page>
</core:View>