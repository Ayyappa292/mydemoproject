<core:FragmentDefinition xmlns="sap.m"
    controllerName="mydemoproject.mycontrollers.mainview"
	xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Dialog id="dio" title="FeedBack Form">
		<content>
			<form:SimpleForm editable="false" width="250px">
			<VBox>
				<TextArea value="" rows="5" id="review">
				</TextArea>
				</VBox>
			</form:SimpleForm>
		</content>
		<beginButton>
			<Button text="Send"  press=".onPostReview"
				type="Accept"></Button>
		</beginButton>
		<endButton>
			<Button text="Cancle" press=".onCancelReview"
				 type="Reject"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>